package tp1;

import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.util.Scanner;
import java.util.StringTokenizer;

public class TUIT {
	public TUIT(){
	}
	private String tweet, usuario1;
	public void settuitt(String tu, String us) {
		this.tweet = tu;
		this.usuario1 = us;
	}
	public int tuittear(){
		StringTokenizer st = new StringTokenizer(tweet);
		return st.countTokens();
	}
	public String gettuit2(){
		return this.tweet;
	}
	public void buscartuitpersona(){
		File archivo = new File("datos.txt");
		Scanner s = null;
		System.out.println(tweet);
		int contador;
		try {
			String linea = s.nextLine();
			String linea2 = linea;
			String tuit = tweet;
			s = new Scanner(archivo);
			System.out.println("... Leyendo tuits del usuario @" + this.usuario1 +  "...");
			while (s.hasNextLine()) {
				contador=0;
				while (tweet.indexOf(usuario1) > -1) {
					tweet = tweet.substring(tweet.indexOf(linea2)+ linea2.length(), tweet.length());
					contador++;
					if(contador==1){
						System.out.println(tweet);
					}
					
				}
				
			}
			
		} 
		catch (Exception ex) {
			System.out.println("Mensaje: " + ex.getMessage());
		} 
		finally {
			try {
				if (s != null)
					s.close();
			} catch (Exception ex2) {
				System.out.println("Mensaje 2: " + ex2.getMessage());
			}
		}
	}
	
}
