package tp1;

import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.util.Scanner;
import java.util.StringTokenizer;

public class TUIT {
	public TUIT(){
	}
	String tweet, usuario1;
	public void settuitt(String tu, String us) {
		this.tweet = tu;
		this.usuario1 = us;
	}
	public int tuittear(){
		StringTokenizer st = new StringTokenizer(tweet);
		return st.countTokens();
	}
	public String gettuit2(){
		return this.tweet;
	}
	public void buscartuitpersona(){
		String busqueda="@" + usuario1;
		File archivo = new File("datos.txt");
		Scanner s = null;
		System.out.println(tweet);
		int contador = 0;
		try {
			String linea = s.nextLine();
			String linea2 = linea;
			String tuit2 = tweet;
			s = new Scanner(archivo);
			System.out.println("... Leyendo tuits del usuario @" + this.usuario1 +  "...");
			while (s.hasNextLine()) {
				contador=0;
				while (linea.indexOf(usuario1) > -1) {
					linea = linea.substring(linea.indexOf(busqueda)+ busqueda.length(), linea.length());
					contador++;
					if (contador == 1) {
						System.out.println(linea);
					}
				}
				
			}
		} 
		catch (Exception ex) {
			System.out.println("Mensaje: " + ex.getMessage());
		} 
		finally {
			try {
				if (s != null)
					s.close();
			} catch (Exception ex2) {
				System.out.println("Mensaje 2: " + ex2.getMessage());
			}
		}
		if(contador==0){
			System.out.println("No hay tuits del usuario: " + this.usuario1);
		}
	}
	
}
